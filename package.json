{
  "name": "faz-splunk-react-dashboard",
  "version": "2.0.0",
  "type": "module",
  "private": true,
  "description": "FortiAnalyzer-Splunk React Dashboard with Real-time Event Streaming",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "npm start",
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "dev:worker": "wrangler dev worker/worker.js",
    "deploy:worker": "wrangler deploy worker/worker.js",
    "tail:worker": "wrangler tail",
    "deploy:dashboards": "python3 scripts/deploy/deploy-dashboard-studio.py",
    "secret:faz-host": "wrangler secret put FAZ_HOST",
    "secret:faz-username": "wrangler secret put FAZ_USERNAME",
    "secret:faz-password": "wrangler secret put FAZ_PASSWORD",
    "secret:splunk-host": "wrangler secret put SPLUNK_HEC_HOST",
    "secret:splunk-token": "wrangler secret put SPLUNK_HEC_TOKEN",
    "secret:slack-token": "wrangler secret put SLACK_BOT_TOKEN",
    "secret:slack-channel": "wrangler secret put SLACK_CHANNEL"
  },
  "keywords": [
    "fortianalyzer",
    "splunk",
    "hec",
    "security",
    "monitoring",
    "slack",
    "alerts"
  ],
  "devDependencies": {
    "wrangler": "^4.65.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "jclee",
  "license": "UNLICENSED"
}
