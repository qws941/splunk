{
  "visualizations": {
    "viz_title": {
      "type": "viz.markdown",
      "options": {
        "markdown": "# Slack 알림 제어\n\n**Settings → Searches, reports, and alerts 에서 Enable/Disable**"
      }
    },
    "viz_status": {
      "type": "splunk.table",
      "title": "알림 상태",
      "dataSources": {
        "primary": "ds_status"
      },
      "options": {
        "count": 10,
        "showRowNumbers": false
      }
    }
  },
  "dataSources": {
    "ds_status": {
      "type": "ds.search",
      "options": {
        "query": "| makeresults | eval alert1=\"FAZ_Critical_Alerts\", alert2=\"FMG_Policy_Install\", alert3=\"FMG_Policy_CRUD\", alert4=\"FMG_Object_CRUD\" | fields alert1, alert2, alert3, alert4 | transpose | rename column as \"Alert Name\", \"row 1\" as \"Status\" | eval Status=\"Settings에서 확인\"",
        "refresh": "30s"
      }
    }
  },
  "defaults": {},
  "inputs": {},
  "layout": {
    "type": "absolute",
    "options": {
      "width": 1440,
      "height": 600
    },
    "structure": [
      {
        "item": "viz_title",
        "type": "block",
        "position": {
          "x": 20,
          "y": 20,
          "w": 1400,
          "h": 100
        }
      },
      {
        "item": "viz_status",
        "type": "block",
        "position": {
          "x": 20,
          "y": 140,
          "w": 1400,
          "h": 400
        }
      }
    ]
  },
  "title": "Slack Control",
  "description": "Slack alert control"
}
